@model EgyptExploring.ViewModel.TripViewModel

@{
    ViewData["Title"] = "Add Trip";
    Layout = "_Layout";
}

@section Head {
    <link rel="stylesheet" href="~/css/admin-addtrip.css" asp-append-version="true" />
}

<section class="admin-addtrip-header">
    <h1>Add New Trip</h1>
    <p>Fill in the trip details below.</p>
</section>

<section class="admin-addtrip-wrapper">
    <div class="admin-addtrip-card">

        <form asp-action="AddTrip" asp-controller="Admin" class="admin-addtrip-form">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="admin-form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="admin-input" placeholder="Enter trip name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="admin-form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="admin-input admin-textarea" placeholder="Trip description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="admin-form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="admin-input" placeholder="Price in EGP" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="admin-form-group">
                <label asp-for="CityId">City</label>
                <select asp-for="CityId" asp-items="ViewBag.Cities" class="admin-input">
                    <option value="">-- Select City --</option>
                </select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>

            <div class="admin-actions">
                <button type="submit" class="btn-primary-admin">Add Trip</button>
                <a asp-controller="Admin" asp-action="GetAllTrips" class="btn-secondary-admin">Cancel</a>
            </div>

        </form>

    </div>
</section>
