@model List<AppUser>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "_Layout";
}

@section Head {
    <link rel="stylesheet" href="~/css/admin-users.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

}







<section class="admin-header">
    <div>
        <h1>Users</h1>
        <p>List of all registered users in the system.</p>
    </div>
</section>

<section class="admin-table-wrapper">
    <table class="admin-table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>UserName</th>
                <th>Email</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    @if (item.LockoutEnd == null)
                    {
                        <td><a asp-controller="Admin" asp-action="LockUser" asp-route-Id="@item.Id" class="Lock">Lock </a></td>
                    }
                    @if (item.LockoutEnd != null)
                    {
                        <td><a asp-controller="Admin" asp-action="UnLockUser" asp-route-Id="@item.Id" class="unlock">UnLock</a></td>
                    }

                </tr>
            }
        </tbody>
    </table>
</section>






